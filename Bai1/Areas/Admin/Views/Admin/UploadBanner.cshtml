@{
    ViewData["Title"] = "Upload Banner";
}

<h2>@ViewData["Title"]</h2>

<form method="post" enctype="multipart/form-data" asp-controller="Home" asp-action="UploadBanner">
    <input type="file" name="bannerImage" />
    <button type="submit">Upload</button>
</form>



@if (TempData["Message"] != null)
{
    <div class="alert alert-success mt-3">@TempData["Message"]</div>
}
<!-- Hiển thị banner -->
<section class="banner-section">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <img src="~/images/banner.png" alt="Banner" class="img-fluid w-100">
            </div>
        </div>
    </div>
</section>
@section Scripts {
    <!-- Chỉ chèn các script này vào view này -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
}
