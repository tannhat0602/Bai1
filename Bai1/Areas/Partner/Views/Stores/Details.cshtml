@model Bai1.Models.Food
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" />

<div class="container py-5">
    <div class="card border-0 shadow-lg rounded-5 p-4" style="background: linear-gradient(to right, #fdfbfb, #ebedee);">
        <div class="row g-5 align-items-center">

            <!-- Hình ảnh món ăn -->
            <div class="col-md-5 text-center">
                <img src="@Model.ImageUrl" alt="@Model.Name"
                     class="img-fluid rounded-5 border border-3 shadow"
                     style="max-height: 450px; width: 100%; object-fit: cover;" />
            </div>

            <!-- Thông tin chi tiết -->
            <div class="col-md-7">
                <h1 class="text-primary fw-bold display-5 mb-4">
                    <i class="bi bi-egg-fried me-2"></i>@Model.Name
                </h1>

                <div class="mb-3">
                    <h5 class="fw-semibold" style="color: #ff4c60;">Mô tả :</h5>
                    <p class="fs-5 text-dark">@Model.Description</p>
                </div>

                <div class="mb-3">
                    <h5 class="fw-semibold" style="color: #ff4c60;">Giá bán :</h5>
                    <p class="fs-4 fw-bold text-success">
                        @String.Format("{0:N0}₫", Model.Price)
                    </p>
                </div>

                <div class="mb-3">
                    <h5 class="fw-semibold" style="color: #ff4c60;">Phân loại :</h5>
                    <span class="badge bg-light text-dark fs-6 px-3 py-2 rounded-pill shadow-sm border">
                        <i class="bi bi-tags me-1"></i>@Model.Category?.Name
                    </span>
                </div>

                <div class="mb-4">
                    <h5 class="fw-semibold" style="color: #ff4c60;">Topping :</h5>
                    @if (Model.Toppings != null && Model.Toppings.Any())
                    {
                        <ul class="list-unstyled">
                            @foreach (var topping in Model.Toppings)
                            {
                                <li class="d-flex justify-content-between align-items-center mb-2">
                                    <span class="text-dark"><i class="bi bi-dot"></i> @topping.Name</span>
                                    <span class="text-success">@String.Format("{0:N0}₫", topping.Price ?? 0)</span>
                                </li>
                            }
                        </ul>
                    }
                    else
                    {
                        <span class="text-muted fst-italic">Không có topping nào.</span>
                    }
                </div>

                <!-- Căn phải nút quay lại -->
                <div class="text-end">
                    <button class="btn btn-outline-primary rounded-pill px-4 py-2"
                            onclick="window.history.back()">
                        <i class="bi bi-arrow-left-circle me-1"></i> Quay lại
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
