@{
    ViewData["Title"] = "Tổng doanh thu";
    var revenueWeek = ViewBag.WeekRevenue ?? 0m;
    var revenueMonth = ViewBag.MonthRevenue ?? 0m;
    var revenueYear = ViewBag.YearRevenue ?? 0m;
}

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold">
            <i class="bi bi-bar-chart-fill text-primary"></i> Thống kê doanh thu
        </h2>
        <a href="/Partner/Stores" class="btn btn-outline-secondary rounded-pill">
            <i class="bi bi-arrow-left"></i> Quay lại trang quản lý
        </a>
    </div>

    <div class="row g-4">
        <div class="col-md-4">
            <div class="card shadow-sm border-start border-4 border-info h-100">
                <div class="card-body text-center">
                    <i class="bi bi-calendar-week fs-2 text-info mb-2"></i>
                    <h5 class="card-title">Doanh thu tuần qua</h5>
                    <p class="fs-4 fw-semibold text-success">@revenueWeek.ToString("N0") ₫</p>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card shadow-sm border-start border-4 border-warning h-100">
                <div class="card-body text-center">
                    <i class="bi bi-calendar-month fs-2 text-warning mb-2"></i>
                    <h5 class="card-title">Doanh thu tháng qua</h5>
                    <p class="fs-4 fw-semibold text-success">@revenueMonth.ToString("N0") ₫</p>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card shadow-sm border-start border-4 border-primary h-100">
                <div class="card-body text-center">
                    <i class="bi bi-calendar3 fs-2 text-primary mb-2"></i>
                    <h5 class="card-title">Doanh thu năm qua</h5>
                    <p class="fs-4 fw-semibold text-success">@revenueYear.ToString("N0") ₫</p>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    <!-- Chỉ chèn các script này vào view này -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
}