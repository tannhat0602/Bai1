@model Bai1.Models.Food
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Delete";
}

<div class="container mt-5">
    <div class="card shadow-lg border-0 rounded-4">
        <div class="card-header bg-danger text-white rounded-top-4 d-flex align-items-center">
            <i class="bi bi-exclamation-triangle-fill fs-3 me-3"></i>
            <h3 class="mb-0">Xác nhận xóa món ăn</h3>
        </div>
        <div class="card-body bg-light rounded-bottom-4">
            <div class="alert alert-warning rounded-pill text-center fw-bold fs-5">
                Bạn có chắc chắn muốn <span class="text-danger">xóa</span> món ăn này không?
            </div>

            <div class="row mb-4 align-items-center">
                <div class="col-md-4 text-center">
                    <img src="@Model.ImageUrl" alt="Ảnh món ăn" class="rounded-4 border shadow-sm" style="width: 100%; max-width: 250px;" />
                </div>
                <div class="col-md-8">
                    <dl class="row fs-4">
                        <dt class="col-sm-4">Tên món:</dt>
                        <dd class="col-sm-8 fw-semibold text-dark">@Model.Name</dd>

                        <dt class="col-sm-4">Giá:</dt>
                        <dd class="col-sm-8 fw-bold text-success">@String.Format("{0:N0}₫", Model.Price)</dd>

                        <dt class="col-sm-4">Mô tả:</dt>
                        <dd class="col-sm-8 text-body">@Model.Description</dd>

                        <dt class="col-sm-4">Phân loại:</dt>
                        <dd class="col-sm-8">@Model.Category?.Name</dd>
                        @if (Model.ImageUrls != null && Model.ImageUrls.Any())
                        {
                            <dt class="col-sm-4">Ảnh khác:</dt>
                            <dd class="col-sm-8">
                                @foreach (var imageUrl in Model.ImageUrls)
                                {
                                    <img src="@imageUrl" alt="Ảnh phụ" class="rounded shadow-sm m-1" width="80" />
                                }
                            </dd>
                        }
                    </dl>
                </div>
            </div>

            <form asp-action="DeleteFood">
                <input type="hidden" asp-for="Id" />
                <div class="d-flex justify-content-end gap-3">
                    <button type="submit" class="btn btn-danger btn-lg rounded-pill px-4">
                        <i class="bi bi-trash me-2"></i> Xóa ngay
                    </button>
                    <a asp-action="Index" class="btn btn-outline-secondary btn-lg rounded-pill px-4">
                        <i class="bi bi-arrow-left me-2"></i> Quay lại
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
}
