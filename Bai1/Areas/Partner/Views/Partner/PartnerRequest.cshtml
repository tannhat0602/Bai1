@model Bai1.Models.PartnerRequest

@{
    ViewData["Title"] = "Đăng ký đối tác";
}

<h2>Đăng ký đối tác</h2>
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}
else
{
    <form asp-action="RegisterPartner" method="post">
        @Html.AntiForgeryToken()

        <div asp-validation-summary="All" class="text-danger"></div>

        <!-- Tên quán -->
        <div class="form-group">
            <label asp-for="BusinessName">Tên Quán</label>
            <input asp-for="BusinessName" class="form-control" required />
        </div>

        <!-- Loại quán -->
        <div class="form-group">
            <label asp-for="BusinessType">Loại Quán</label>
            <input asp-for="BusinessType" class="form-control" required />
        </div>

        <!-- Địa chỉ -->
        <div class="form-group">
            <label asp-for="StreetAddress">Địa chỉ</label>
            <input asp-for="StreetAddress" class="form-control" required />
        </div>

        <!-- Tên đường -->
        <div class="form-group">
            <label asp-for="StreetName">Tên Đường</label>
            <input asp-for="StreetName" class="form-control" required />
        </div>

        <!-- Tỉnh/Thành phố -->
        <div class="form-group">
            <label asp-for="City">Tỉnh/Thành phố</label>
            <select asp-for="City" class="form-control" required>
                <option value="">-- Chọn Tỉnh/Thành phố --</option>
                <option value="Hà Nội">Hà Nội</option>
                <option value="TP.HCM">TP.HCM</option>
                <option value="Đồng Nai">Đồng Nai</option>
                <option value="Đà Nẵng">Đà Nẵng</option>
                <option value="Cần Thơ">Cần Thơ</option>
            </select>
        </div>

        <!-- Quận/Huyện -->
        <div class="form-group">
            <label asp-for="District">Quận/Huyện</label>
            <select asp-for="District" class="form-control" required>
                <option value="">-- Chọn Quận/Huyện --</option>
            </select>
        </div>

        <!-- Số điện thoại -->
        <div class="form-group">
            <label asp-for="BusinessPhone">Số điện thoại</label>
            <input asp-for="BusinessPhone" class="form-control" required />
        </div>

        <button type="submit" class="btn btn-primary">Gửi yêu cầu</button>
    </form>
}
@section Scripts {
    <!-- Chỉ chèn các script này vào view này -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
}