@{
    ViewData["Title"] = "Trang chủ";
}

<h2>Trang chủ</h2>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}

@if (User.Identity.IsAuthenticated)
{
    <p>
        Chào @User.Identity.Name, bạn đã gửi yêu cầu đăng ký đối tác. <br />
        Vui lòng đợi admin duyệt yêu cầu của bạn.
    </p>
}
else
{
    <p>
        Bạn chưa đăng nhập. Vui lòng đăng nhập để gửi yêu cầu đăng ký đối tác.
    </p>
}

<!-- Nút quay lại trang chủ -->
<a href="@Url.Action("Index", "Home", new { area = "" })" class="btn btn-primary">Quay lại trang chủ</a>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
