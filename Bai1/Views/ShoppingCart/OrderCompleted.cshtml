@model int

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8 text-center">
            <div class="card shadow-lg p-5 rounded-5 border-0 animate__animated animate__fadeIn">
                <div class="mb-4">
                    <i class="bi bi-patch-check-fill animate__animated animate__bounceIn" style="font-size: 6rem; color: #28a745;"></i>
                </div>
                <h1 class="mb-3 fw-bold text-success">Đặt hàng thành công!</h1>
                <p class="lead mb-3">Cảm ơn bạn đã tin tưởng và đặt hàng tại <strong>TTDFood</strong>.</p>
                <p class="mb-3 text-secondary">Cảm phiền bạn đợi một lúc, đơn hàng của bạn sẽ được nhân viên giao đến ngay 🚚.</p>
                <p class="mb-4 fs-5">Mã đơn hàng của bạn là: <strong class="text-primary">@Model</strong></p>
                <a asp-action="Index" asp-controller="Home" class="btn btn-success btn-lg px-5 py-2 rounded-pill">
                    <i class="bi bi-house-door-fill"></i> Quay về trang chủ
                </a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />
}
